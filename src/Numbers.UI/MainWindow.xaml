<Window x:Class="Numbers.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Numbers.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel HorizontalAlignment="Left" Margin="5">
        <StackPanel Orientation="Horizontal">
            <TextBox Text="{Binding UserInput}" Width="150"></TextBox>
            <Button Command="{Binding ConvertCommand}">Parse!</Button>
        </StackPanel>
        <TextBlock Text="{Binding Result}" TextWrapping="Wrap" Width="150"></TextBlock>
        <TextBlock Text="{Binding Error}" Foreground="Red" TextWrapping="Wrap" Width="150"></TextBlock>
    </StackPanel>
</Window>
